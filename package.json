{
  "name": "@emdgroup/tapir",
  "version": "1.0.0-beta.0",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "openapi",
    "typescript",
    "ts",
    "typeguard"
  ],
  "files": [
    "dist",
    "bin"
  ],
  "bin": "./bin/cli.js",
  "scripts": {
    "test:ts": "mocha --bail --watch-files '**/*.ts' --extension ts --require ts-node/register --timeout 10000 'src/**/*.spec.ts'",
    "test:js": "yarn build && mocha --bail --watch-files '**/*.js' --timeout 10000 'dist/**/*.spec.js'",
    "test:strict": "yarn test:js --forbid-only",
    "build": "tsc",
    "prepublish": "yarn build",
    "lint": "eslint src/"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/js-yaml": "^4.0.0",
    "@types/mocha": "^8.0.2",
    "@types/node": "^14.10.0",
    "@types/yargs": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.6.0",
    "mocha": "^8.1.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.0"
  },
  "dependencies": {
    "ajv": "^7.0.3",
    "ajv-formats": "^1.5.1",
    "esbuild": "^0.8.36",
    "js-yaml": "^4.0.0",
    "openapi-types": "^7.2.3",
    "swagger-parser": "^10.0.2",
    "yargs": "^16.2.0"
  }
