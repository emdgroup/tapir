{
  "name": "@emdgroup/tapir",
  "version": "1.0.0-beta.17",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "openapi",
    "typescript",
    "ts",
    "typeguard"
  ],
  "files": [
    "dist",
    "bin"
  ],
  "bin": "./bin/cli.js",
  "scripts": {
    "test:ts": "mocha --bail --watch-files '**/*.ts' --extension ts --require ts-node/register --timeout 10000 src/testSetup.ts 'src/**/*.spec.ts'",
    "test:js": "yarn build && mocha --bail --watch-files '**/*.js' --timeout 10000 dist/testSetup.js 'dist/**/*.spec.js'",
    "test:strict": "yarn test:js --forbid-only && tsd",
    "build": "tsc",
    "prepack": "yarn build",
    "lint": "eslint src/"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/js-yaml": "^4.0.0",
    "@types/mocha": "^8.0.2",
    "@types/node": "^14.10.0",
    "@types/yargs": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.6.0",
    "mocha": "^9.0.0",
    "ts-node": "^9.0.0",
    "tsd": "^0.17.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "ajv": "^8.4.0",
    "ajv-formats": "^2.1.0",
    "esbuild": "^0.12.1",
    "js-yaml": "^4.0.0",
    "openapi-types": "^9.1.0",
    "swagger-parser": "^10.0.2",
    "yargs": "^17.0.0"
  },
  "tsd": {
    "directory": "fixtures"
  },
  "engines": {
    "node": ">= 12"
  }
}
